<div class="row">
  <div class="small-12 columns">

    <!-- search (by title, person, team, champion) -->
      
    <!-- video grid (sort by views, recent) -->
    <div class="row collapsed">
      <div class="small-12 medium-3 columns">
        <div class="sort-container">
          <form>
            <select>
              <option>Date</option>
              <option>Views</option>
            </select>
          </form>
        </div>
      </div>
    </div>
    <div ng-hide="search">
      <ul class="small-block-grid-2 medium-block-grid-4">
          <li ng-repeat="video in videos">
            <h4><a ng-href="/#/videos/{{video.id}}">{{video.title}}</a></h4>
            <a ng-href="/#/videos/{{video.id}}"><img ng-src="{{youtubeThumb(video.youtube_id)}}"/></a>
          </li>
      </ul>
    </div>
    <div ng-show="search">
      <h2>Search Results</h2>
      <ul class="small-block-grid-2 medium-block-grid-4">
          <li ng-repeat="video in searchResults">
            <h4><a ng-href="/#/videos/{{video.id}}">{{video.title}}</a></h4>
            <a ng-href="/#/videos/{{video.id}}"><img ng-src="{{youtubeThumb(video.youtube_id)}}"/></a>
          </li>
      </ul>
    </div>
  </div>
</div>