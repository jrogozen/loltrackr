<div class="row">
  <div class="small-12 columns">
    
    <h2>riot api calls</h2>

    <input type="text" ng-model="champ.name" placeholder="search champions..."/>

    <div class="team" ng-init="team = []">
      <h3>Picks</h3>
      <ul class="small-block-grid-5">
        <li ng-repeat="champ in team">
          <img src="http://ddragon.leagueoflegends.com/cdn/4.18.1/img/champion/{{champ.image.full}}">
          <div class="info">
            <h4>{{champ.champ.name}}</h4>
            <p>Tags: {{champ.tags.join(', ')}}</p>
            <p>Role: {{champ.role.join(', ')}}</p>
          </div>
        </li>
      </ul>
    </div>

    <div ng-show="showChampions">
      <div ng-show="showSuggestions">
        <h3>Recommended Champions For {{role.charAt(0).toUpperCase() + role.slice(1)}} Composition</h3>

        <ul class="filtered-champions-container small-block-grid-12">
          <li ng-repeat="champ in filteredChampions | filter: champ.name">
            <img ng-click="addToTeam(champ)" ng-src="{{imageUrl}}{{champ.image.full}}">
          </li>
        </ul>
      </div>

      <h3>All Champions</h3>
      <ul class="champions-container small-block-grid-12">
        <li ng-repeat="champ in champions | filter: champ.name">
          <img ng-click="addToTeam(champ)" ng-src="{{imageUrl}}{{champ.image.full}}">
        </li>
      </ul>
    </div>

  </div>
</div>